<Lems>

<!-- Initial version in NeuroML v2.0 of a striatal spiny projection neuron (SSPN) model being developed in the lab of Avrama Blackwell -->


<!-- Specify which component to run -->
<DefaultRun component="sim1"/>

<!-- Include core NeuroML2 ComponentClass definitions -->
<Include file="NeuroML2CoreTypes/Cells.xml"/>
<Include file="NeuroML2CoreTypes/Networks.xml"/>
<Include file="NeuroML2CoreTypes/Simulation.xml"/>

<Include file="kAf_chanREqfact.nml"/>
<Include file="kAs_chanREqfact.nml"/>

<Include file="naFchanOgeqn.nml"/>
<Include file="KDr_chanQfact.nml"/>
<Include file="kIR_chanRE2.nml"/>
<Include file="CaR_channel.nml"/>
<Include file="CaPool.nml"/>
   <!--
<Include file="SKchannel.nml"/>
      Main NeuroML2 content -->


<ionChannel id="passive" compClass="ionChannelPassive" conductance="10pS"/>


<cell id="sspn">

    <notes>A test cell containing a number of the channels from the SSPN model</notes>

    <morphology id="morphology_sspn">

        <segment id="0" name="Soma">
            <proximal x="-8" y="0" z="0" diameter="16"/>
            <distal x="8" y="0" z="0" diameter="16"/>
        </segment>

        <segmentGroup id="all">
            <include segmentGroup="Soma"/>
        </segmentGroup>

    </morphology>

    <biophysicalProperties id="biophys">

        <membraneProperties>

            <channelDensity id="leak" ionChannel="passive" condDensity="1 S_per_m2" erev="-60mV" ion="non_specific"/>
            <channelDensity id="naFChans" ionChannel="naF" condDensity="9000 S_per_m2" erev="50mV" ion="na"/>
            <channelDensity id="kDrChans" ionChannel="KDr" condDensity="6.04 S_per_m2" erev="-90mV"  ion="k"/>
            <channelDensity id="kIRChans" ionChannel="kIR" condDensity="8 S_per_m2" erev="-90mV"  ion="k"/>
            <channelDensity id="kAfChans" ionChannel="kAf" condDensity="765.24 S_per_m2" erev="-90mV"  ion="k"/>
            <channelDensity id="kAsChans" ionChannel="kAs" condDensity="360.1 S_per_m2" erev="-90mV"  ion="k"/>
           
            
            <!--<channelDensityGHK id="CaRChansG" ionChannel="CaR" permeability="1e-6 m_per_s" ion="ca"/>

            <channelPopulation id="SKChans" ionChannel="SK" number="1600" erev="-90mV" ion="k"/>

            <channelPopulationNernst id="CaRChansN" ionChannel="CaR" number="16000" ion="ca"/>-->

            <spikeThresh value="0 mV"/>

            <specificCapacitance value="0.03 F_per_m2"/>

            <initMembPotential value="-75.0 mV"/>

        </membraneProperties>

        <intracellularProperties>

            <species id="ca" ion="ca" concentrationModel="CaPool" initialConcentration="5e-5 mM" initialExtConcentration="2 mM"/>

            <resistivity value="0.1 kohm_cm"/>

        </intracellularProperties>

    </biophysicalProperties>

</cell>




<pulseGenerator id="pulseGen1" delay="50ms" duration="50ms" amplitude="0.3 nA" />
<pulseGenerator id="pulseGen2" delay="150ms" duration="50ms" amplitude="-0.01 nA" />



<network id="net1">
    <extracellularProperties temperature="32degC"/>
    <population id="sspnPop" component="sspn" size="1"/>
    <explicitInput target="sspnPop[0]" input="pulseGen1"/>
    <explicitInput target="sspnPop[0]" input="pulseGen2"/>
</network>


        <!-- End of NeuroML2 content -->


<Simulation id="sim1" length="250ms" step="0.01ms" target="net1">

    <Display id="d1" title="AB example: Voltage" timeScale="1ms">
        <Line id="l1" quantity="sspnPop[0]/v" scale="1mV"  color="#ffffff" save="v.dat"/>
    </Display>

     <Display id="d2" title="AB example: rate variables" timeScale="1ms">
        
        <Line id="l2" quantity="sspnPop[0]/biophys/membraneProperties/naFChans/naF/m/q" scale="1"  color="#000000" save="naF_m.dat"/>
        <Line id="l3" quantity="sspnPop[0]/biophys/membraneProperties/naFChans/naF/h/q" scale="1"  color="#ff0000" save="naF_h.dat"/>
        <Line id="l4" quantity="sspnPop[0]/biophys/membraneProperties/kAfChans/kAf/m/q" scale="1"  color="#0000ff" save="kAf_m.dat"/>
        <Line id="l5" quantity="sspnPop[0]/biophys/membraneProperties/kAfChans/kAf/h/q" scale="1"  color="#00ffff" save="kAf_h.dat"/>
        <Line id="l6" quantity="sspnPop[0]/biophys/membraneProperties/kDrChans/KDr/m/q" scale="1"  color="#ff00ff" save="kDr_m.dat"/>
        <Line id="l6" quantity="sspnPop[0]/biophys/membraneProperties/kIRChans/kIR/m/q" scale="1"  color="#3f0aaf" save="kIR_m.dat"/>
        <Line id="l7" quantity="sspnPop[0]/biophys/membraneProperties/kAsChans/kAs/m/q" scale="1"  color="#472910" save="kAs_m.dat"/>
        <Line id="l8" quantity="sspnPop[0]/biophys/membraneProperties/kAsChans/kAs/h/q" scale="1"  color="#173456" save="kAs_h.dat"/>
        <!--<Line id="l9" quantity="sspnPop[0]/biophys/membraneProperties/CaRChansG/CaR/m/q" scale="1"  color="#668800" save="CaR_m.dat"/>
        <Line id="l10" quantity="sspnPop[0]/biophys/membraneProperties/CaRChansG/CaR/h/q" scale="1"  color="#007700" save="CaR_h.dat"/>
        <Line id="l11" quantity="sspnPop[0]/biophys/membraneProperties/SKChans/SK/m/q" scale="1"  color="#777700" save="sk_m.dat"/>-->
    </Display>


    <Display id="d4" title="AB example: small currents" timeScale="1ms">
        <Line id="li2" quantity="sspnPop[0]/biophys/membraneProperties/naFChans/iDensity" scale="1mA_per_cm2"  color="#00aa00" save="i_naf.dat"/>
        <Line id="li5" quantity="sspnPop[0]/biophys/membraneProperties/kIRChans/iDensity" scale="1mA_per_cm2"  color="#3a0f3a" save="i_kir.dat"/>
        <Line id="li6" quantity="sspnPop[0]/biophys/membraneProperties/kAsChans/iDensity" scale="1mA_per_cm2"  color="#4444aa" save="i_kas.dat"/>
        <Line id="li3" quantity="sspnPop[0]/biophys/membraneProperties/kAfChans/iDensity" scale="1mA_per_cm2"   color="#00aaaa" save="i_kaf.dat"/>
        <Line id="li4" quantity="sspnPop[0]/biophys/membraneProperties/kDrChans/iDensity" scale="1mA_per_cm2"   color="#aa00aa" save="i_kdr.dat"/>
        <!--<Line id="li5" quantity="sspnPop[0]/biophys/membraneProperties/CaRChansG/iDensity" scale="1mA_per_cm2"  color="#aaaa00" save="i_carg.dat"/>-->
    </Display>
    
    <Display id="d3" title="AB example: large currents" timeScale="1ms">
        <Line id="li1" quantity="sspnPop[0]/pulseGen1/i" scale="1nA"  color="#000000" save="i.dat"/>
        <!--<Line id="li6" quantity="sspnPop[0]/biophys/membraneProperties/SKChans/iDensity" scale="1mA_per_cm2"  color="#777700" save="i_sk.dat"/>
        <Line id="li5" quantity="sspnPop[0]/biophys/membraneProperties/CaRChansN/iDensity" scale="1mA_per_cm2"  color="#007700" save="i_carn.dat"/>-->
    </Display>

    <Display id="d5" title="AB example: concentration" timeScale="1ms">
        <!--<Line id="li11" quantity="sspnPop[0]/caConcExt" scale="1 mM"  color="#ff00ff" save="cao.dat"/>-->
        <Line id="li12" quantity="sspnPop[0]/caConc" scale="1 mM"  color="#ffffff" save="cai.dat"/>
    </Display>
<!--
    <Display id="d6" title="AB example: effective reversal potential" timeScale="1ms">
        <Line id="li14n" quantity="sspnPop[0]/biophys/membraneProperties/CaRChansN/erev" scale="1 mV"  color="#ff00ff" save="erevN.dat"/>
        <Line id="li14g" quantity="sspnPop[0]/biophys/membraneProperties/CaRChansG/erevEff" scale="1 mV"  color="#ffffff" save="erevG.dat"/>
    </Display>-->

</Simulation>


</Lems>