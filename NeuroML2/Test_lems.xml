<Lems>

<!-- Initial version in NeuroML v2.0 of a striatal spiny projection neuron (SSPN) model being developed in the lab of Avrama Blackwell -->


<!-- Specify which component to run -->
<DefaultRun component="sim1"/>

<!-- Include core NeuroML2 ComponentClass definitions -->
<Include file="NeuroML2CoreTypes/Cells.xml"/>
<Include file="NeuroML2CoreTypes/Networks.xml"/>
<Include file="NeuroML2CoreTypes/Simulation.xml"/>

<Include file="kAf_chanREqfact.nml"/>
<Include file="kAs_chanREqfact.nml"/>

<Include file="naFchanOgeqn.nml"/>
<Include file="KDr_chanQfact.nml"/>
<Include file="kIR_chanRE2.nml"/>
<Include file="CaR_channel.nml"/>

         <!--Main NeuroML2 content -->


<ionChannel id="passive" compClass="ionChannelPassive" conductance="10pS"/>


<cell id="sspn">

    <notes>A test cell containing a number of the channels from the SSPN model</notes>

    <morphology id="morphology_sspn">

        <segment id="0" name="Soma">
            <proximal x="-8" y="0" z="0" diameter="16"/>
            <distal x="8" y="0" z="0" diameter="16"/>
        </segment>

        <segmentGroup id="all">
            <include segmentGroup="Soma"/>
        </segmentGroup>

    </morphology>

    <biophysicalProperties id="biophys">

        <membraneProperties>

            <channelPopulation id="leak" ionChannel="passive" number="3000" erev="-60mV"/>
            <channelPopulation id="kDrChans" ionChannel="KDr" number="10000" erev="-77mV"  ion="k"/>
            <channelPopulation id="kIRChans" ionChannel="kIR" number="16000" erev="-77mV" ion="k"/>
            <channelPopulation id="naFChans" ionChannel="naF" number="12000" erev="50mV" ion="na"/>
            <channelPopulation id="kAfChans" ionChannel="kAf" number="16000" erev="-77mV" ion="k"/>
            <channelPopulation id="kAsChans" ionChannel="kAs" number="16000" erev="-77mV" ion="k"/>
            <channelPopulation id="CaRChans" ionChannel="CaR" number="16000" erev="77mV" ion="ca"/>

            <spikeThresh value="0 mV"/>

            <specificCapacitance value="1.0 uF_per_cm2"/>

            <initMembPotential value="-60.0 mV"/>

        </membraneProperties>

        <intracellularProperties>

            <species id="ca" ion="ca">
                <concentrationModel type="decayingPoolConcentrationModel"
                                     resting_conc="7.55E-11 mol_per_cm3"
                                     decay_constant="10.0 ms"
                                     shell_thickness="8.4E-6 cm"
                                     initialConcentration="7.55E-11 mol_per_cm3"/>
            </species>

            <resistivity value="0.1 kohm_cm"/>

        </intracellularProperties>

    </biophysicalProperties>

</cell>




<pulseGenerator id="pulseGen1" delay="50ms" duration="50ms" amplitude="2 nA" />
<pulseGenerator id="pulseGen2" delay="150ms" duration="50ms" amplitude="-0.2 nA" />


<network id="net1">
    <population id="sspnPop" component="sspn" size="1"/>
    <explicitInput target="sspnPop[0]" input="pulseGen1"/>
    <explicitInput target="sspnPop[0]" input="pulseGen2"/>
</network>


        <!-- End of NeuroML2 content -->


<Simulation id="sim1" length="250ms" step="0.01ms" target="net1">

    <Display id="d1" title="AB example: Voltage" timeScale="1ms">
        <Line id="l1" quantity="sspnPop[0]/v" scale="1mV"  color="#ffffff" save="v.dat"/>
    </Display>

     <Display id="d2" title="AB example: rate variables" timeScale="1ms">
        
        <Line id="l2" quantity="sspnPop[0]/biophys/membraneProperties/naFChans/naF/m/q" scale="1"  color="#000000" save="naF_m.dat"/>
        <Line id="l3" quantity="sspnPop[0]/biophys/membraneProperties/naFChans/naF/h/q" scale="1"  color="#ff0000" save="naF_h.dat"/>
        <Line id="l4" quantity="sspnPop[0]/biophys/membraneProperties/kAfChans/kAf/m/q" scale="1"  color="#0000ff" save="kAf_m.dat"/>
        <Line id="l5" quantity="sspnPop[0]/biophys/membraneProperties/kAfChans/kAf/h/q" scale="1"  color="#00ffff" save="kAf_h.dat"/>
        <Line id="l6" quantity="sspnPop[0]/biophys/membraneProperties/kDrChans/KDr/m/q" scale="1"  color="#ff00ff" save="kDr_m.dat"/>
        <Line id="l6" quantity="sspnPop[0]/biophys/membraneProperties/kIRChans/kIR/m/q" scale="1"  color="#3f0aaf" save="kIR_m.dat"/>
        <Line id="l7" quantity="sspnPop[0]/biophys/membraneProperties/kAsChans/kAs/m/q" scale="1"  color="#472910" save="kAs_m.dat"/>
        <Line id="l8" quantity="sspnPop[0]/biophys/membraneProperties/kAsChans/kAs/h/q" scale="1"  color="#173456" save="kAs_h.dat"/>
        <Line id="l9" quantity="sspnPop[0]/biophys/membraneProperties/CaRChans/CaR/m/q" scale="1"  color="#668800" save="CaR_m.dat"/>
        <Line id="l10" quantity="sspnPop[0]/biophys/membraneProperties/CaRChans/CaR/h/q" scale="1"  color="#17ffff" save="CaR_h.dat"/>
    </Display>

    <Display id="d3" title="AB example: large currents" timeScale="1ms">
        <Line id="li1" quantity="sspnPop[0]/pulseGen1/i" scale="1nA"  color="#000000" save="i.dat"/>
        <Line id="li3" quantity="sspnPop[0]/biophys/membraneProperties/kAfChans/i" scale="1nA"  color="#00aaaa" save="i_kaf.dat"/>
        <Line id="li4" quantity="sspnPop[0]/biophys/membraneProperties/kDrChans/i" scale="1nA"  color="#aa00aa" save="i_kdr.dat"/>
        <Line id="li5" quantity="sspnPop[0]/biophys/membraneProperties/CaRChans/i" scale="1nA"  color="#aaaa00" save="i_car.dat"/>
    </Display>

    <Display id="d4" title="AB example: small currents" timeScale="1ms">
        <Line id="li2" quantity="sspnPop[0]/biophys/membraneProperties/naFChans/i" scale="1nA"  color="#00aa00" save="i_naf.dat"/>
        <Line id="li5" quantity="sspnPop[0]/biophys/membraneProperties/kIRChans/i" scale="1nA"  color="#3a0f3a" save="i_kir.dat"/>
        <Line id="li6" quantity="sspnPop[0]/biophys/membraneProperties/kAsChans/i" scale="1nA"  color="#4444aa" save="i_kas.dat"/>
    </Display>

    <Display id="d5" title="AB example: conc" timeScale="1ms">
        <Line id="li12" quantity="sspnPop[0]/caConc" scale="1 mM"  color="#ffffff" save="cai.dat"/>
    </Display>

</Simulation>


</Lems>